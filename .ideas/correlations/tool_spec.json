{
    "key": "isx/correlations",
    "name": "correlations",
    "version": "0.0.2",
    "schema_version": "3.0.0",
    "description": "Analyze pairwise Pearson correlations between neural traces across behavioral states.",
    "container_image": {
        "repository": "platform/neuro-stats",
        "label": "0.0.1"
    },
    "command": {
        "file_path": "analysis/correlations.py",
        "entry_point": "correlation_tool",
        "program_type": "PYTHON"
    },
    "params": [
        {
            "key": "cell_set_files",
            "name": "cell_set_files",
            "required": true,
            "description": "cell_set_files",
            "type": {
                "param_type": "ToolPathParam",
                "multiple": true
            }
        },
        {
            "key": "annotations_file",
            "name": "annotations_file",
            "required": false,
            "description": "annotations_file",
            "type": {
                "param_type": "ToolPathParam",
                "multiple": true
            }
        },
        {
            "key": "column_name",
            "name": "column_name",
            "required": false,
            "description": "column_name",
            "type": {
                "param_type": "ToolStringParam",
                "default": "state"
            }
        },
        {
            "key": "state_names",
            "name": "state_names",
            "required": false,
            "description": "state_names",
            "type": {
                "param_type": "ToolStringParam",
                "default": ""
            }
        },
        {
            "key": "state_colors",
            "name": "state_colors",
            "required": false,
            "description": "state_colors",
            "type": {
                "param_type": "ToolStringParam",
                "default": "blue, orange, grey"
            }
        },
        {
            "key": "correlation_colors",
            "name": "correlation_colors",
            "required": false,
            "description": "correlation_colors",
            "type": {
                "param_type": "ToolStringParam",
                "default": "red, blue"
            }
        },
        {
            "key": "statistic",
            "name": "statistic",
            "required": false,
            "description": "statistic",
            "type": {
                "param_type": "ToolStringParam",
                "default": "max"
            }
        },
        {
            "key": "include_positions",
            "name": "include_positions",
            "required": false,
            "description": "include_positions",
            "type": {
                "param_type": "ToolBooleanParam",
                "default": true
            }
        },
        {
            "key": "correlation_threshold",
            "name": "correlation_threshold",
            "required": false,
            "description": "correlation_threshold",
            "type": {
                "param_type": "ToolFloatRangeParam",
                "default": 0.5
            }
        }
    ],
    "results": [
        {
            "key": "tool_output_group",
            "name": "Tool Outputs",
            "description": "Tool outputs",
            "file_patterns": [
                "**/*"
            ]
        }
    ],
    "resources": {
        "cpu": 1,
        "gpu": 0,
        "memory": 1000
    }
}
